{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "resolveJsonModule": true
  },
  "typeRoots": [
    "types",
    "./node_modules/@types"
  ],   
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}

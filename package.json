{
  "name": "standard-microservice",
  "version": "1.0.0",
  "description": "A Standard Microservice Template",
  "scripts": {
    "start": "node index",
    "dev-server": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "dev": "nodemon",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "test": "jest ",
    "test:watch": "jest --watch",
    "test:cover": "jest --collectCoverage",
    "test:cover:open": "open ./coverage/lcov-report/index.html",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.3",
    "multer": "^1.4.2",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.0",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.23",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.0.0",
    "@types/yamljs": "^0.2.31",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "pre-commit": [
    "lint",
    "test:cover"
  ]
}
